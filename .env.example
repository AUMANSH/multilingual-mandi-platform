# Database Configuration
DATABASE_URL=postgresql://mandi_user:mandi_password@localhost:5432/mandi_platform
TEST_DATABASE_URL=postgresql://mandi_user:mandi_password@localhost:5432/mandi_platform_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
TEST_REDIS_URL=redis://localhost:6379/1

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=mandi_platform

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
MARKET_DATA_API_KEY=your-market-data-api-key

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Supported Languages (ISO 639-1 codes)
SUPPORTED_LANGUAGES=hi,en,ta,te,bn,mr,gu,kn,ml,pa

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Performance Settings
REDIS_CACHE_TTL=3600  # 1 hour
TRANSLATION_CACHE_TTL=86400  # 24 hours
PRICE_CACHE_TTL=900  # 15 minutes

# Notification Settings
SMS_API_KEY=your-sms-api-key
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# Development Settings
RELOAD=true
HOST=0.0.0.0
PORT=8000
WORKERS=1